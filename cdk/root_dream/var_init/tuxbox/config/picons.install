#!/bin/sh

icl=`grep "^infobar_channel_logodir=" /var/tuxbox/config/neutrino.conf|cut -d "=" -f2|sed 's/\/$//'`
[ "$icl" = "" ] && icl="/var/etc/icons"
mkdir -p $icl

tiz=/tmp/icons.zip
mv $icl/icons.zip $tiz

#download failed check
if [ ! -s $tiz ]; then
 rm -f $tiz
 exit 1
fi

rm -fr $icl/*.*
cd $icl
unzip $tiz
rm -f $tiz
dos2unix icons.sh
chmod 755 icons.sh
. icons.sh

exit 0

